#include <stdio.h>
#include <conio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node *next;
};

struct node *head = NULL;

void create();
void add();
void display();

void main() {
    int choice;
    clrscr();

    while(1) {
        printf("\n\n----- Singly Linked List Menu -----");
        printf("\n1. Create List");
        printf("\n2. Add Node");
        printf("\n3. Display List");
        printf("\n4. Exit");
        printf("\n----------------------------------");
        printf("\nEnter your choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1: create(); break;
            case 2: add(); break;
            case 3: display(); break;
            case 4: exit(0);
            default: printf("\nInvalid Choice!");
        }
    }
}

void create() {
    struct node *newnode, *temp;
    int n, i;
    if (head != NULL) {
        printf("\nList already created!");
        return;
    }

    printf("\nEnter number of nodes to create: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        newnode = (struct node*)malloc(sizeof(struct node));
        printf("Enter data for node %d: ", i + 1);
        scanf("%d", &newnode->data);
        newnode->next = NULL;

        if(head == NULL) {
            head = newnode;
            temp = head;
        } else {
            temp->next = newnode;
            temp = newnode;
        }
    }
    printf("\nLinked List created successfully!");
}

void add() {
    struct node *newnode, *temp;
    newnode = (struct node*)malloc(sizeof(struct node));

    printf("\nEnter data to add: ");
    scanf("%d", &newnode->data);
    newnode->next = NULL;

    if(head == NULL) {
        head = newnode;
    } else {
        temp = head;
        while(temp->next != NULL) {
            temp = temp->next;
        }
        temp->next = newnode;
    }
    printf("\nNode added successfully!");
}

void display() {
    struct node *temp;
    if(head == NULL) {
        printf("\nList is empty!");
        return;
    }

    temp = head;
    printf("\nLinked List elements are:\n");
    while(temp != NULL) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL");
}
